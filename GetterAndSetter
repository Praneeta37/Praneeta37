package com;

public class Mobile {
private String name;
private  int price;
Mobile(String n,int p){
	name=n;
	price=p;
	System.out.println("mobile name is "+name+" and price is "+price);
}
public String getName() {
	return name;
}
public void setName(String name) {
	this.name = name;
}
public int getPrice() {
	return price;
}
public void setPrice(int price) {
	this.price = price;
}
}

package com;

public class TestMobile {
public static void main(String[] args) {
	Mobile mobile=new Mobile("Redmi",15000);
}
}

o/p
=====
mobile name is Redmi and price is 15000
